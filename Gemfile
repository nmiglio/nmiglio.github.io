source "https://rubygems.org"

# This single line tells Bundler to download the exact, modern versions 
# of Jekyll and all standard plugins that GitHub Pages uses.
gem "github-pages", group: :jekyll_plugins

# Your extra plugins
gem "jekyll-sitemap"
gem "jekyll-gist"
gem "jekyll-feed"


# Modern versions of Ruby (v3.0+) removed a built-in server called 'webrick'. 
# We need to add it back manually or Jekyll will crash when it starts.
gem "webrick"

